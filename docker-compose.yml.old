version: '2'

services:
  rabbitmq:
    image: rabbitmq:latest
    container_name: rabbitmq_images
    restart: always
    ports:
      - "15672:15672"
      - "5672:5672"
    volumes:
      - "./data:/var/lib/rabbitmq/mnesia/"
    networks:
      - rabbitmq

  receive_image:
    build: ./receive_image/
    container_name: receive_image
    restart: always
    ports:
      - '5000:5000'
    volumes:
      - "./receive:/home/receive_image/"
    depends_on:
      - rabbitmq
    links:
      - rabbitmq

  resizing_image:
    build: ./resizing_image/
    container_name: resizing_image
    restart: always
    volumes:
      - "./resizing:/home/resizing_image/"
    links:
      - rabbitmq
    depends_on:
      - rabbitmq

networks:
  rabbitmq:
    driver: bridge